extends layouts/main.pug

block content
    .form-container
        form(action=routes.editProfile, method="post")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar")
            input(type="text",name="name", placaholder="Name")
            input(type="email", name="email", placaholder="Email")
            input(type="submit", value="Update Profile")
        a.form-container--Link(href=routes.changePassword) Change Password