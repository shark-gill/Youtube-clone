extends layouts/main.pug

block content
    p Edit Video
    .form-container
        form(action=`/videos${routes.editVideo}`, method="post")
            input(type="text", name="title", placeholder="Title")
            input(type="email", name="description", placeholder="Description")
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__ling--delete(href=`/videos${routes.deleteVideo}`) Delete Video