extends layouts/main.pug

block content
    p Edit Video
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", name="title", placeholder="Title", value=video.title)
            textarea(name="decription", placeholder="Description")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__ling--delete(href=routes.deleteVideo(video.id)) Delete Video
    