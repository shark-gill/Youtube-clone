extends layouts/main.pug

block content
    p Upload
    .form-container
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file", name="videoFile", placeholder="file", required=true, accept="video/*")
            input(type="text", name="title", placeholder="Title", required=true)
            textarea(name="decription", placeholder="Description", required=true)
            input(type="submit", value="Upload Video")